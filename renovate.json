{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": true,
  "semanticCommitType": "CORE",
  "semanticCommitScope": "Renovate",
  "enabledManagers": [
    "swift"
  ],
  "swift": {
    "fileMatch": [
       "(^|/)Package\\.swift"
    ]
  },
  "versioning": "swift",
  "pinDigests": false,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "Auto patch update ðŸ¤–",
        "Open to review ðŸ‘€",
        "Waiting for QA ðŸ§ª"
      ]
    }
  ]
}
